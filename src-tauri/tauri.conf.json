{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "iDemand",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [{
          "name": "code-open",
          "cmd": "code",
          "args": true
        }, {
          "name": "webstorm-open",
          "cmd": "webstorm",
          "args": true
        }],
        "sidecar": false
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cn.uiseed.idemand",
      "longDescription": "",
      "macOS": {
        "entitlements": "../entitlements.plist",
        "exceptionDomain": "api.uiseed.cn",
        "frameworks": [],
        "providerShortName": "康兵奎",
        "signingIdentity": "3rd Party Mac Developer Application: Bingkui Kang (N8CP79P49X)"
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "windows": [{
      "fullscreen": false,
      "height": 640,
      "resizable": false,
      "title": "iDemand",
      "width": 800,
      "minHeight": 640,
      "minWidth": 1000,
      "visible": false,
      "decorations": true,
      "hiddenTitle": true,
      "titleBarStyle": "Overlay"
    }]
  }
}